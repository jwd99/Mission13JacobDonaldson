@{
    ViewData["Title"] = "Home";
}
@model List<Bowler>

<vc:modalpop></vc:modalpop>
<div class="text-center">
    <h1 class="display-4">@ViewBag.TeamName</h1>
    <a class="btn btn-primary" asp-controller="Home" asp-action="createBowlerForm">Add Bowler</a>
</div>


<table class="table table-bordered table-primary">
    <thead>
        <tr>
        <td>First Name</td>
        <td>Middle Initial</td>
        <td>Last Name</td>
        <td>Address</td>
        <td>City</td>
        <td>State</td>
        <td>Zip</td>
        <td>Phone Number</td>
        <td>Team Name</td>
        <td>Edit</td>
        <td>Delete</td>
        </tr>
    </thead>
  
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
            <td>@b.BowlerFirstName</td>
            <td>@b.BowlerMiddleInit</td>
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>
            <td>@b.Team.TeamName</td>
            <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Edit</button></td>
            <td><a asp-controller="Home" asp-action="deleteBowler" asp-route-id="@b.BowlerID"class="btn btn-danger">Delete</a></td>
                
            </tr>
        }
        </tbody>
</table>

